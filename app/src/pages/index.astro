---
import Layout from '../layouts/Layout.astro'
import { TracksyWrapper } from '../components/TracksyWrapper'
---

<Layout title="Tracksy">
    <div class="min-h-screen bg-gray-50 dark:bg-gray-950 relative">
        <!-- Connect to Spotify button -->
        <div class="absolute top-4 right-4">
            <button
                class="bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200"
            >
                Connect to Spotify
            </button>
        </div>

        <!-- Main content area -->
        <div class="flex items-center justify-center min-h-screen">
            <div class="max-w-lg mx-auto">
                <h1 class="text-xl font-bold text-center mb-4 dark:text-white">
                    Tracksy
                </h1>
                <TracksyWrapper client:only="react" />
            </div>
        </div>
    </div>
</Layout>
